[
    {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "采购信息",
        "description": "采购信息元数据",
        "type": "object",
        "properties": {
            "suppler": {
                "type": "string",
                "description": "供应商"
            },
            "purchaser": {
                "type": "string",
                "description": "采购人"
            },
            "date": {
                "type": "string",
                "description": "采购日期, 格式YYYY-mm-dd"
            },
            "required": [
                "suppler",
                "purchaser",
                "date"
            ],
            "additionalProperties": false
        }
    },
    {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "采购信息",
        "description": "采购信息详情",
        "type": "object",
        "properties": {
            "rows": {
                "type": "array",
                "description": "采购信息的行",
                "items": {
                    "type": "object",
                    "properties": {
                        "row_id":{
                            "type": "number",
                            "description": "行号，如果原文没有行号请自行补充"
                        },
                        "stuffName": {
                            "type": "string",
                            "description": "材料名称，请忠实的复制原文"
                        },
                        "brand": {
                            "type": "string",
                            "description": "品牌名称"
                        }
                    },
                    "required": [
                        "row_id",
                        "stuffName",
                        "brand"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "rows"
            ],
            "additionalProperties": false
        }
    },
    {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "采购信息",
        "description": "采购信息详情",
        "type": "object",
        "properties": {
            "rows": {
                "type": "array",
                "description": "采购信息的行",
                "items": {
                    "type": "object",
                    "properties": {
                        "row_id":{
                            "type": "number",
                            "description": "行号，如果原文没有行号请自行补充"
                        },
                        "spec": {
                            "type": "string",
                            "description": "规格加型号"
                        },
                        "unit": {
                            "type": "string",
                            "description": "计量单位"
                        }
                    },
                    "required": [
                        "row_id",
                        "spec",
                        "unit"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "rows"
            ],
            "additionalProperties": false
        }
    },
    {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "采购信息",
        "description": "采购信息详情",
        "type": "object",
        "properties": {
            "rows": {
                "type": "array",
                "description": "采购信息的行, 如果没有相关的详细信息, 请输出空字符串",
                "items": {
                    "type": "object",
                    "properties": {
                        "row_id":{
                            "type": "number",
                            "description": "行号，如果原文没有行号请自行补充"
                        },
                        "num": {
                            "type": "number",
                            "description": "数量"
                        },
                        "price": {
                            "type": "number",
                            "description": "单价"
                        },
                        "amount": {
                            "type": "number",
                            "description": "金额"
                        }
                    },
                    "required": [
                        "row_id",
                        "num",
                        "price",
                        "amount"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "rows"
            ],
            "additionalProperties": false
        }
    }
]